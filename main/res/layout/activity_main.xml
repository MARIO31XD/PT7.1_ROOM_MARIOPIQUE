<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView android:text="Nova Tasca" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/etTitol" android:hint="Títol" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/etDesc" android:hint="Descripció" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnGuardarTasca" android:text="Afegir Tasca" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Space android:layout_width="match_parent" android:layout_height="20dp"/>

            <TextView android:text="Nou Tag" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/etNomTag" android:hint="Nom del Tag" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnGuardarTag" android:text="Afegir Tag" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Space android:layout_width="match_parent" android:layout_height="20dp"/>

            <TextView android:text="Filtra per Tag" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/etFiltre" android:hint="Escriu un tag per filtrar" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:id="@+id/btnFiltrar" android:text="Filtrar" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btnVeureTotes" android:text="Veure Totes" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView android:id="@+id/tvResultats" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Llista de tasques..." android:paddingTop="20dp" android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>